html[dir*='rtl']
{
    @require '~vuepress.rtl'
}

img
{
    text-align: center;
}

.el-tabs__item.is-active
{
    color: $accentColor; 
}

.el-tabs__item:hover
{
    color: $accentColor; 
}

.notes
{
    float:right;
    clear:both;
}

.subheading 
{
    font-size: 20px;
    border:none;
    margin-top:2em;
    margin-bottom:2em;
    padding:0;
    color: #333;
}

.pullout
{
    width:200px;
    float:right;
    margin-right:-220px;   
}

.theme-default-content:not(.custom)
{
    margin:0;
}

.page-nav
{
    margin:0 !important;   
}

@media (max-width:1400px)
{
    .pullout
    {
        float: none;
        width:100%;
    }

    // iframe {
    //     width:100%;
    // }
}

.sidebar
{
    width:16rem;
}

.large
{
    font-size: 40px;
    float:left;
}

iframe
{
    width:800px;
    height:450px;
}

table
{
    
    width:100%;
    // display: table;
    overflow: scroll;
}

.page-edit
{
    margin:0 !important;
}

.repo-link
{
    display: none !important;
}

.herocard
{
    min-height:280px;
    position: relative;
    margin-bottom: 2em;

    p
    {
        margin-bottom: 60px;
    }

    button
    {
        position: absolute;
        bottom: 20px;
    }
}

