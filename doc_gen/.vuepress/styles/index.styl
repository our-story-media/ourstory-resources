.home
{
    .el-card
    {
        // position: relative;
        margin-top: 1em;

        img
        {
            display: block;
            width: 100%;
            height: auto;
            object-fit: cover;
            max-height: 200px;
        }
    }
}

span.next, span.prev
{
    display: inline-block;
    line-height: 1;
    white-space: nowrap;
    cursor: pointer;
    background: #FFF;
    border: 1px solid #DCDFE6;
    color: #606266;
    -webkit-appearance: none;
    text-align: center;
    box-sizing: border-box;
    outline: 0;
    margin: 0;
    transition: .1s;
    font-weight: 500;
    -ms-user-select: none;
    padding: 12px 20px;
    font-size: 14px;
    border-radius: 4px;

    &:hover
    {
        color: #D63434;
        border-color: #f3c2c2;
        background-color: #fbebeb;
    }
}

.page-nav .inner
    border-top: none;

.cc
{
    margin: 1em;
    text-align: center;
    font-size: 80%;
}

.iconwrapper
{
    display block;
    text-align center;
    float:right;
    margin-left:0.2em;
    margin-top:0.5em;
    margin-bottom:1em;
}

.el-col .iconwrapper
{
    float: none;   
}

.el-divider__text
{
    font-size: 18px;
    color: #666;
}

.custom-block.warning
{
    background-color: transparent;
}

